parameters:
    level: 5
    paths:
        - app
        - src
    excludePaths:
        - vendor
        - tests
        - bin
    ignoreErrors:
        # Ignore errors about missing classes that might be loaded dynamically
        - '#Class .* not found#'
        - '#Call to an undefined method#'
    
    # PHPStan extensions
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
    
    # Custom rules for GEMVC framework
    customRules:
        - PHPStan\Rules\Functions\CallToNonExistentFunctionRule
        - PHPStan\Rules\Methods\CallToNonExistentMethodRule
        - PHPStan\Rules\Properties\AccessPropertiesRule
        - PHPStan\Rules\Properties\ReadPropertiesRule
    
    # Bootstrap file if needed
    # bootstrapFiles:
    #     - bootstrap.php
    
    # Memory limit
    memoryLimitFile: 1G
    
    # Parallel processing
    parallel:
        processTimeout: 120.0
        maximumNumberOfProcesses: 4
    
    # Error format
    errorFormat: table
    
    # Baseline file (will be generated on first run)
    # baseline: phpstan-baseline.neon
